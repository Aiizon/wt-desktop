<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
        x:Class="wt_desktop.app.Module.AdminModule"
>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="100" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button x:Name="BayButton" Margin="5" FontSize="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <iconPacks:PackIconMaterial Kind="Server" Margin="5" />
                    <TextBlock Text="Baies" Margin="5" />
                </StackPanel>
            </Button>
        </StackPanel>

        <ContentControl x:Name="PageContent" Grid.RowSpan="3" Grid.Column="2" />
    </Grid>
</UserControl>
